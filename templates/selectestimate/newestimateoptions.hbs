<div>
	<p id="selectOption" class="errorText" style="color:red;display:none"><i><strong>No Option selected</strong></i></p>
	<p id="categMissing" class="errorText" style="color:red;display:none"><i><strong>Enter Category</strong></i></p>
	{{#each estOptions}}
		<div class="ui-grid-a">
			<div class="ui-block-a" style="width:80%">
				<h3>{{this}}</h3>
			</div>
			<div class="ui-block-b" style="width:20%;float:right">
				<input type="radio" name="estOption" style="margin-top:0.6em" value="{{this}}"/>
			</div>
		</div>
	{{/each}}
	<div class="ui-grid-a">
		<div class="ui-block-a" style="width:80%">
			<input type="text" placeholder="Other" id="otherOpt" />
		</div>
		<div class="ui-block-b" style="width:20%;float:right">
			<input type="radio" name="estOption" style="margin-top:0.6em" value="Other"/>
		</div>
	</div>
	<input type="button" id="optionSelected" value="Done"/>
</div>

